import discord
from discord.ext import commands
import random

intents = discord.Intents.default()
intents = discord.Intents.all()

bot = commands.Bot(command_prefix='!', intents=intents)

@bot.event
async def on_ready():
    print(f'Bot is ready as {bot.user}')




@bot.command()
async def Try(ctx):
  responses = ["Ne", "Ano"]
  response = random.choice(responses)
  await ctx.send(response)



@bot.command()
async def ck(ctx):
  await ctx.send('CK:\n'
     'VZOR\n'
     '==========\n\n'
     'Kdo:\n'
     'Na koho: (IC jm√©no)\n'
     'D≈Øvod:\n'
     'Kdy:\n'
     'Fotku jako d≈Økaz, ≈æe jste IC postavu zabili:\n\n'
     '==========')


